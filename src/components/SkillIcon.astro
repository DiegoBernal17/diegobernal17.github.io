---
import HTML from "@/icons/HTML.astro";
import CSS from "@/icons/CSS.astro";
import JavaScript from "@/icons/JavaScript.astro";
import TypeScript from "@/icons/TypeScript.astro";
import React from "@/icons/React.astro";
import Node from "@/icons/Node.astro";
import MySQL from "@/icons/SQL.astro";
import Git from "@/icons/Git.astro";
import GitHub from "@/icons/GitHub.astro";
import Tailwind from "@/icons/Tailwind.astro";
import Next from "@/icons/Next.astro";
import Svelte from "@/icons/Svelte.astro";
import AWS from "@/icons/AWS.astro";
import DBA from "@/icons/DBA.astro";
import Linux from "@/icons/Linux.astro";
import MongoDB from "@/icons/MongoDB.astro";
import Terminal from "@/icons/Terminal.astro";
import Angular from "@/icons/Angular.astro";
import AstroIcon from "@/icons/Astro.astro";

const SKILLS_ICONS: Record<string, any> = {
  Astro: AstroIcon,
  HTML,
  CSS,
  JavaScript,
  TypeScript,
  React,
  "Remix.run": React,
  Node,
  Express: Node,
  MySQL,
  Git,
  GitHub,
  "Next.js": Next,
  Tailwind,
  Svelte,
  Angular,
  AWS,
  DBA,
  Linux,
  MongoDB,
  PostgreSQL: DBA,
  "Process monitoring": Terminal,
  "Server provisioning": Terminal,
};

const { name } = Astro.props;

const Icon = name in SKILLS_ICONS ? SKILLS_ICONS[name] : null;
---

{Icon && <Icon />}
