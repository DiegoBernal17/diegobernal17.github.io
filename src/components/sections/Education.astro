---
import { getYears } from "@/utils/format";
import Section from "../Section.astro";

import { getI18N } from "@/i18n/";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
const { education } = i18n.cv;
---

<Section title={i18n.EDUCATION}>
  <ul>
    {
      education.map(({ institution, area, startDate, endDate }) => {
        return (
          <li>
            <article>
              <header>
                <h3>{institution}</h3>
                <time>{getYears(startDate, endDate)}</time>
              </header>
              <footer>
                <p>{area}</p>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 14px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 2px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
  }
</style>
