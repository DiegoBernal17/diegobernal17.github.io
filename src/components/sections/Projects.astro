---
import Section from "../Section.astro";

import { getI18N } from "@/i18n/";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
const { projects } = i18n.cv;
---

<Section title={i18n.PROJECTS} noPrint>
  <ul>
    {
      projects.map(
        ({ url, description, highlights, name, isActive, image }) => {
          return (
            <li>
              <article id="project">
                {image && <img src={image} alt="GFG image" />}
                <header>
                  <h3>
                    {url ? (
                      <a
                        href={url}
                        title={`Ver el proyecto ${name}`}
                        target="_blank"
                        rel="noopener noreferrer"
                      >
                        {name}
                      </a>
                    ) : (
                      name
                    )}
                    {isActive && <span>•</span>}
                  </h3>
                  <p>{description}</p>
                </header>
                <footer>
                  {highlights.map((highlight) => (
                    <span>{highlight}</span>
                  ))}
                </footer>
              </article>
            </li>
          );
        }
      )
    }
  </ul>
</Section>

<script>
  // Encuentra todos los botones con la clase `alert` en la página.
  const buttons = document.querySelectorAll("article#project");

  // Maneja los clics en cada botón.
  buttons.forEach((button) => {
    button.addEventListener("click", (ev) => {
      const element = ev.currentTarget as Element;
      const img = element.querySelector("img");
      if (!img) return;
      img.style.display = img.style.display === "block" ? "none" : "block";
    });
  });
</script>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-inline: -16px;
  }

  article {
    border-radius: 8px;
    border: 1px solid #f2f2f2;
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
  }

  article header {
    flex: 1;
  }

  article h3 {
    margin-bottom: 4px;
  }

  article a {
    color: #111;
    &:hover {
      text-decoration: underline;
    }
  }

  article p {
    font-size: 0.75rem;
    line-height: 1.2rem;
    margin-bottom: 4px;
  }

  article h3 span {
    color: rgb(0, 188, 47);
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.6rem;
  }

  footer span {
    border-radius: 6px;
    background: #eee;
    color: #444;
    font-size: 0.6rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
    letter-spacing: normal;
  }
  img {
    display: none;
    max-height: 160px;
  }
</style>
